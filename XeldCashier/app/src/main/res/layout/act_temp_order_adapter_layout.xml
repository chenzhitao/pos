<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_temp_order_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/x420"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x120"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_temp_order_time"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/x55"
            android:gravity="center"
            android:text="2012-06-20"
            android:textColor="#ff494242"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/tv_temp_order_name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/x55"
            android:gravity="center"
            android:text="会员"
            android:textColor="#ff494242"
            android:textSize="21sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/x447"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_temp_order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1000"
                android:textColor="#fffd6b4b"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_temp_order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="2件"
                android:textColor="#fffd6b4b"
                android:textSize="12sp" />

        </LinearLayout>


    </LinearLayout>


    <ListView
        android:id="@+id/lv_temp_order_detail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x300">
    </ListView>


</LinearLayout>