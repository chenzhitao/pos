<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ly_main_right_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x78"
            android:background="#FFFFFF"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.xw.repo.XEditText
                android:id="@+id/input_shop_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x8"
                android:background="@null"
                android:drawablePadding="@dimen/x10"
                android:hint="请输入商品名称"
                android:maxLength="20"
                android:paddingLeft="@dimen/x30"
                android:paddingRight="@dimen/x20"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="@dimen/sp14"
                app:x_clearDrawable="@mipmap/clear_input" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x706"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <GridView
                android:id="@+id/gv_shop_list"
                android:layout_width="652dp"
                android:layout_height="470dp"
                android:horizontalSpacing="@dimen/dp_10"
                android:numColumns="3"
                android:stretchMode="columnWidth"
                android:visibility="visible" />

            <ListView
                android:background="#FFFAFAFA"
                android:id="@+id/lv_product_cata_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#00000000"
                android:dividerHeight="0dip"
                android:layout_marginLeft="@dimen/dp_10" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x113"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <TextView
                android:layout_width="160dp"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/act_main_tv_more_bg_shape"
                android:gravity="center"
                android:text="无码商品"
                android:textColor="#FFA641" />


            <TextView
                android:layout_width="160dp"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:layout_marginLeft="250dp"
                android:background="@drawable/act_main_tv_more_bg_shape"
                android:gravity="center"
                android:text="更多操作"
                android:textColor="#FFA641" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
