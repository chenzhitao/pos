<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x90"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal">

        <TextView
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x64"
            android:gravity="center"
            android:text="新增会员"
            android:textColor="#ff494242"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="380dp">

            <TextView
                android:id="@+id/tv_close_add_member_fragment"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:background="@drawable/act_main_left_text_shape"
                android:gravity="center"
                android:text="关闭"
                android:textColor="#fffd6b4b"
                android:textSize="15sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_input_member"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x90"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/x145"
        android:layout_marginTop="15dp"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:layout_width="@dimen/x15"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="*"
            android:textColor="#FF0000"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="手机号码"
            android:textColor="#FF181818"
            android:textSize="15sp" />

        <TextView
            android:layout_width="10px"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text=":" />


        <LinearLayout
            android:layout_width="@dimen/x649"
            android:layout_height="match_parent"
            android:background="@drawable/add_prpduct_et_bg"
            android:focusable="true"
            android:focusableInTouchMode="true">


            <com.xw.repo.XEditText
                android:id="@+id/phone_et_main_add_member"
                android:layout_width="@dimen/x649"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:hint="请输入手机号码"
                android:maxLength="20"
                android:paddingLeft="@dimen/x30"
                android:paddingRight="@dimen/x20"
                android:singleLine="true"
                android:textColor="#ffbfbfbf"
                android:inputType="number"
                android:textSize="@dimen/sp15"
                app:x_clearDrawable="@mipmap/clear_input" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_input_main_adduser"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x90"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/x145"
        android:layout_marginTop="15dp"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x8"
            android:gravity="center"
            android:text="昵称|备注"
            android:textColor="#FF181818"
            android:textSize="15sp" />

        <TextView
            android:layout_width="10px"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text=":" />


        <com.xw.repo.XEditText
            android:id="@+id/nickname_et_main_add_member"
            android:layout_width="@dimen/x649"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/add_prpduct_et_bg"
            android:hint="请输入昵称"
            android:maxLength="20"
            android:paddingLeft="@dimen/x30"
            android:paddingRight="@dimen/x20"
            android:singleLine="true"
            android:textColor="#ffbfbfbf"
            android:textSize="@dimen/sp15"
            app:x_clearDrawable="@mipmap/clear_input" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x90"
        android:layout_marginLeft="@dimen/x145"
        android:layout_marginTop="15dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x15"
            android:gravity="center"
            android:text="会员等级"
            android:textColor="#FF181818"
            android:textSize="15sp" />

        <TextView
            android:layout_width="10px"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text=":" />

        <TextView
            android:id="@+id/tv_menber_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="普通会员"
            android:textColor="#FF181818"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x90"
        android:layout_marginLeft="@dimen/x145"
        android:layout_marginTop="15dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x15"
            android:gravity="center"
            android:text="会员生日"
            android:textColor="#FF181818"
            android:textSize="15sp" />

        <TextView
            android:layout_width="10px"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text=":" />

        <TextView
            android:id="@+id/ev_selete_member_birthday"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="选择会员生日"
            android:textColor="#FF181818"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x90"
        android:layout_marginLeft="@dimen/x145"
        android:layout_marginTop="15dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x15"
            android:gravity="center"
            android:text="会员性别"
            android:textColor="#FF181818"
            android:textSize="15sp" />

        <TextView
            android:layout_width="10px"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text=":" />


        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/ck_menber_man"
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"
            android:layout_width="132dp"
            android:layout_height="@dimen/x90"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="男"
            android:theme="@style/addCheckBox" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/ck_menber_woman"
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"
            android:layout_width="132dp"
            android:layout_height="@dimen/x90"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_15"
            android:gravity="center_vertical"
            android:text="女"
            android:theme="@style/addCheckBox" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        android:gravity="center">


        <TextView
            android:id="@+id/tx_member_cancel"
            android:layout_width="@dimen/x160"
            android:layout_height="@dimen/x80"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_150"
            android:background="@drawable/act_main_left_text_shape"
            android:gravity="center"
            android:text="取消"
            android:textColor="#ffffa53f"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tx_member_add"
            android:layout_width="@dimen/x160"
            android:layout_height="@dimen/x80"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_40"
            android:background="@drawable/main_pay_text_bg_shape"
            android:gravity="center"
            android:text="保存"
            android:textColor="#ffffffff"
            android:textSize="16sp" />


    </RelativeLayout>


</LinearLayout>