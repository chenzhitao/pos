<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="892px"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x261"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="110dp"
            android:layout_height="29dp"
            android:text="应收金额："
            android:textColor="#ff494242"
            android:textSize="19sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:text="￥"
            android:textColor="#fffd6b4b"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tv_member_actualTotal"
            android:layout_width="110dp"
            android:layout_height="26dp"
            android:text="0.00"
            android:textColor="#fffd6b4b"
            android:textSize="21sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="125dp"
                android:layout_height="40dp"
                android:text="会员名称："
                android:textColor="#ff494242"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_member_pay_nick"
                android:layout_width="125dp"
                android:layout_height="40dp"
                android:text="80"
                android:textColor="#FDA74B"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="750px"
            android:layout_height="@dimen/x112"
            android:layout_marginLeft="@dimen/x63"
            android:background="@drawable/act_main_left_text_shape"
            android:orientation="horizontal">

            <TextView
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="余额支付：￥"
                android:textColor="#666666"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_member_pay_money"
                android:layout_width="@dimen/x300"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="0"
                android:textColor="#FF0F0D0D"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_member_pay_ml"
                android:layout_width="@dimen/x200"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="抹零补差"
                android:visibility="gone"
                android:textColor="#FFFF6C3F"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_zh_pay_ml"
            android:layout_width="750px"
            android:layout_height="@dimen/x60"
            android:layout_marginLeft="@dimen/x63"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="@dimen/x313"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="账户余额不足，去充值>>"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x37"
                android:gravity="center_vertical"
                android:text="余额补差：￥"
                android:textColor="#FF0F0D0D"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tx_ml_money"
                android:layout_width="@dimen/x200"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="#FF0F0D0D"
                android:textSize="20sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/ck_menber_pay_print_order"
            android:layout_width="132dp"
            android:layout_height="46dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:gravity="center"
            android:text="打印小票"
            android:theme="@style/MyCheckBox" />

        <TextView
            android:id="@+id/tv_member_pay_cancel_order"
            android:layout_width="82dp"
            android:layout_height="36dp"
            android:layout_marginLeft="120dp"
            android:background="@drawable/act_main_left_text_shape"
            android:gravity="center"
            android:text="取消交易"
            android:textColor="#ffffa53f"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_member_pay_ok"
            android:layout_width="82dp"
            android:layout_height="36dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/act_main_member_text_shape"
            android:gravity="center"
            android:text="会员支付"
            android:textColor="#ffffff"
            android:textSize="16sp" />


    </LinearLayout>


</LinearLayout>