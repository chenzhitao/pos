<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_order_state_all"
                android:layout_width="49dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="全部"
                android:textColor="#fffd6b4b"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_order_state_fs"
                android:layout_width="49dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="待配送"
                android:textColor="#ff666666"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_order_state_ziti"
                android:layout_width="49dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="待自提"
                android:textColor="#ff666666"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_order_state_express"
                android:layout_width="49dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="待快递"
                android:textColor="#ff666666"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_order_state_cashier"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:text="门店收银"
                android:textColor="#ff666666"
                android:textSize="10sp" />

            <com.xw.repo.XEditText
                android:id="@+id/ev_order_search"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x8"
                android:background="@null"
                android:hint="请输入会员手机号码"
                android:inputType="number"
                android:maxLength="20"
                android:paddingLeft="@dimen/x30"
                android:paddingRight="@dimen/x20"
                android:singleLine="true"
                android:textSize="@dimen/sp12"
                app:x_clearDrawable="@mipmap/clear_input" />

        </LinearLayout>

        <include layout="@layout/fragment_ibase_list" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_weight="4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x280"
            android:background="#F9F9F9"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="订单状态："
                    android:textColor="#666666"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/tv_order_list_state_right"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="待发货"
                    android:textColor="#FD7356"
                    android:textSize="12sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="订单号："
                    android:textColor="#666666"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/tv_order_list_number"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="73282625454512161646"
                    android:textColor="#666666"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="收银员："
                    android:textColor="#666666"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/tv_order_list_cashier"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="曹梦秋"
                    android:textColor="#666666"
                    android:textSize="12sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="支付方式："
                        android:textColor="#666666"
                        android:textSize="12sp" />


                    <TextView
                        android:id="@+id/tv_order_list_pay_type"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="现金支付"
                        android:textColor="#666666"
                        android:textSize="12sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="支付时间："
                        android:textColor="#666666"
                        android:textSize="12sp" />


                    <TextView
                        android:id="@+id/tv_order_list_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="2021-01-11 11:43"
                        android:textColor="#666666"
                        android:textSize="12sp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="会员："
                        android:textColor="#666666"
                        android:textSize="12sp" />


                    <TextView
                        android:id="@+id/tv_order_list_member_nick"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="散客"
                        android:textColor="#666666"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="手机号码："
                        android:textColor="#666666"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_order_list_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="18611128418"
                        android:textColor="#666666"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="84dp"
                    android:layout_height="38dp"
                    android:gravity="center"
                    android:text="商品总价："
                    android:textColor="#666666"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:gravity="center"
                    android:text="￥"
                    android:textColor="#666666"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/tv_order_list_product_total"
                    android:layout_width="54dp"
                    android:layout_height="38dp"
                    android:gravity="center_vertical"
                    android:text="0.0"
                    android:textColor="#666666"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="84dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="@dimen/dp_74"
                    android:gravity="center"
                    android:text="配送费："
                    android:textColor="#666666"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:gravity="center"
                    android:text="￥"
                    android:textColor="#666666"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/tv_order_list_product_peisong"
                    android:layout_width="54dp"
                    android:layout_height="38dp"
                    android:gravity="center_vertical"
                    android:text="0"
                    android:textColor="#666666"
                    android:textSize="12sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="84dp"
                    android:layout_height="38dp"
                    android:gravity="center"
                    android:text="实收金额："
                    android:textColor="#666666"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:gravity="center"
                    android:text="￥"
                    android:textColor="#666666"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/tv_order_list_actual_payment"
                    android:layout_width="54dp"
                    android:layout_height="38dp"
                    android:gravity="center_vertical"
                    android:text="0.0"
                    android:textColor="#666666"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="@dimen/dp_74"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="54dp"
                        android:layout_height="38dp"
                        android:gravity="center"
                        android:text="平台优惠："
                        android:textColor="#666666"
                        android:textSize="8sp" />

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:gravity="center"
                        android:text="￥"
                        android:textColor="#666666"
                        android:textSize="8sp" />

                    <TextView
                        android:id="@+id/tv_order_list_discount"
                        android:layout_width="54dp"
                        android:layout_height="38dp"
                        android:gravity="center_vertical"
                        android:text="520.0"
                        android:textColor="#666666"
                        android:textSize="8sp" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#E7E7E7" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:visibility="gone"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="84dp"
                    android:layout_height="38dp"
                    android:gravity="center"
                    android:text="顾客支付："
                    android:textColor="#ff666666"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:gravity="center"
                    android:text="￥"
                    android:textColor="#ff333333"
                    android:textSize="8sp" />

                <TextView
                    android:layout_width="54dp"
                    android:layout_height="38dp"
                    android:gravity="center_vertical"
                    android:text="0.0"
                    android:textColor="#ff333333"
                    android:textSize="12sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/x45"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="84dp"
                    android:layout_height="38dp"
                    android:gravity="center"
                    android:text="商家收款："
                    android:textColor="#ff666666"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:gravity="center"
                    android:text="￥"
                    android:textColor="#ff333333"
                    android:textSize="8sp" />

                <TextView
                    android:layout_width="54dp"
                    android:layout_height="38dp"
                    android:gravity="center_vertical"
                    android:text="0.0"
                    android:textColor="#ff333333"
                    android:textSize="12sp" />


            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#E7E7E7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center">

            <ListView
                android:id="@+id/order_list_product"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ListView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center_vertical">


            <TextView
                android:id="@+id/tv_order_pay_exit"
                android:layout_width="82dp"
                android:layout_height="55dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/act_main_left_text_shape"
                android:gravity="center"
                android:text="退款"
                android:textColor="#ffffa53f"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/tv_order_list_print"
                android:layout_width="180dp"
                android:layout_height="55dp"
                android:layout_marginLeft="60dp"
                android:background="@drawable/add_member_et_bg"
                android:gravity="center"
                android:text="打印小票"
                android:textColor="#ffffffff"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>