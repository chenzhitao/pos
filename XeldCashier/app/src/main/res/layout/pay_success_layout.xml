<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_pay_susses"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="110dp"
                android:layout_height="29dp"
                android:text="支付状态："
                android:textColor="#ff494242"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/tv_pay_order_state"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:text="成功"
                android:textColor="#fffd6b4b"
                android:textSize="21sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="125dp"
                    android:layout_height="40dp"
                    android:text="订单编号："
                    android:textColor="#ff494242"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_susses_pay_ordernum"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="80"
                    android:textColor="#FDA74B"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="125dp"
                    android:layout_height="40dp"
                    android:text="支付金额："
                    android:textColor="#ff494242"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_susses_pay_money"
                    android:layout_width="125dp"
                    android:layout_height="40dp"
                    android:text="10"
                    android:textColor="#FDA74B"
                    android:textSize="20dp" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_pay_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_pay_state"
            android:layout_width="202dp"
            android:layout_height="36dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center"
            android:text="支付退款状态"
            android:textColor="#ffffa53f"
            android:textSize="16sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/tv_susses_pay_refund"
            android:layout_width="82dp"
            android:layout_height="36dp"
            android:layout_marginLeft="120dp"
            android:background="@drawable/act_main_left_text_shape"
            android:gravity="center"
            android:text="退款"
            android:textColor="#ffffa53f"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_susses_pay_ok"
            android:layout_width="82dp"
            android:layout_height="36dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/act_main_left_text_shape"
            android:gravity="center"
            android:text="确定"
            android:textColor="#ffffa53f"
            android:textSize="16sp" />

    </LinearLayout>


</LinearLayout>